<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <TextView
            android:id="@+id/tbDay"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rceycleview_layout"
            android:padding="5dp"
            android:text="일"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tbOnTime"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rceycleview_layout"
            android:padding="5dp"
            android:text="출근"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tbOffTime"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rceycleview_layout"
            android:padding="5dp"
            android:text="퇴근"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tbTime"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rceycleview_layout"
            android:padding="5dp"
            android:text="일반시간"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tbRestTime"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rceycleview_layout"
            android:padding="5dp"
            android:text="휴계시간"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tbExtensionTime"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rceycleview_layout"
            android:padding="5dp"
            android:text="연장시간"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tbNightTime"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rceycleview_layout"
            android:padding="5dp"
            android:text="야간시간"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tbTotalTime"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rceycleview_layout"
            android:padding="5dp"
            android:text="총시간"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tbWage"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rceycleview_layout"
            android:padding="5dp"
            android:text="일반시급"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tbRestWage"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rceycleview_layout"
            android:padding="5dp"
            android:text="휴계시급"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tbExtensionWage"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rceycleview_layout"
            android:padding="5dp"
            android:text="연장시급"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tbNightWage"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rceycleview_layout"
            android:padding="5dp"
            android:text="야간시급"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tbTotalWage"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rceycleview_layout"
            android:padding="5dp"
            android:text="총시급"
            android:textSize="20dp" />

</LinearLayout>
