<Page x:Class="Schcduler.WageManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Schcduler"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WageManagement" Loaded="Page_Loaded">

    <Grid Background="Lavender">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Name="info" Grid.Row="0">
            <Grid HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ComboBox Name="year" Width="80" Grid.Column="0"/>
                <ComboBox Name="month" Width="50" Grid.Column="1"/>
                <Button x:Name="Search" Width="40" Content="검색" Grid.Column="2" Click="Search_Click"/>
                <Button x:Name="Save" Width="40" Content="저장" Grid.Column="3" Click="Save_Click"/>
            </Grid>
            <Grid HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnExcel" Content="엑셀변환" Click="btnExcel_Click" Grid.Column="1"/>
            </Grid>
        </Grid>
        <DataGrid Name="DGSchedule" ItemsSource="{Binding}" Grid.Row="1" FontSize="15" AutoGenerateColumns="False" 
                  AreRowDetailsFrozen="False" CanUserReorderColumns="False" CanUserResizeColumns="False" CanUserResizeRows="False"
                  CanUserSortColumns="False" ClipToBounds="True" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="날짜" Binding="{Binding Path=Date}" IsReadOnly="True"/>
                <DataGridTextColumn Header="출근시간" Binding="{Binding Path=OnTime}" IsReadOnly="False"/>
                <DataGridTextColumn Header="퇴근시간" Binding="{Binding Path=OffTime}" IsReadOnly="False"/>
                <DataGridTextColumn Header="일반시간" Binding="{Binding Path=Time}" IsReadOnly="True"/>
                <DataGridTextColumn Header="휴계시간" Binding="{Binding Path=RestTime}" IsReadOnly="True"/>
                <DataGridTextColumn Header="연장시간" Binding="{Binding Path=ExtensionTime}" IsReadOnly="True"/>
                <DataGridTextColumn Header="야간시간" Binding="{Binding Path=NightTime}" IsReadOnly="True"/>
                <DataGridTextColumn Header="총시간" Binding="{Binding Path=TotalTime}" IsReadOnly="True"/>
                <DataGridTextColumn Header="일반시급" Binding="{Binding Path=Wage}" IsReadOnly="True"/>
                <DataGridTextColumn Header="휴계시급" Binding="{Binding Path=RestWage}" IsReadOnly="True"/>
                <DataGridTextColumn Header="연장시급" Binding="{Binding Path=ExtensionWage}" IsReadOnly="True"/>
                <DataGridTextColumn Header="야간시급" Binding="{Binding Path=NightWage}" IsReadOnly="True"/>
                <DataGridTextColumn Header="총시급" Binding="{Binding Path=TotalWage}" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
